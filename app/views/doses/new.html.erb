<div class="container">
    <h1>Coco's bar</h1>
    <h2><%= @cocktail.name %></h2>
</div>
<div class="container">
<h3>Ajouter un ingrédient : </h3>
<div class="container">
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient, error: 'Attention : ingrédient obligatoire' %>
    <%= f.input :description, label: 'Dose', error: 'Attention : la dose est obligatoire' %>
  <%= f.button :submit, label: "Ajouter" %>
<% end %>
</div>
