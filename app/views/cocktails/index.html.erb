<div class="banner-top">
</div>
<div class="container-fluid" style="text-align: center;">
<h1>Tous nos cocktails</h1>
</div>
<div class="container">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: url('<%= cl_image_path cocktail.photo, height: 300, width: 350, crop: :fill %>')">
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
        <div class="card-action-view"> 
        <%= link_to 'Voir', cocktail_path(cocktail), class:"btn btn-primary btn-lg"%>
        </div>
      </div>
    </div>
    <%end%>